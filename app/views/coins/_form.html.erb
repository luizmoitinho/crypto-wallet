<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="mb-3">
    <%= form.label :description, :class => "form-label" %>
    <%= form.text_field :description, class:"form-control", placeholder:"Bitcoin" %>
  </div>

  <div class="mb-3">
    <%= form.label :acronym, :class => "form-label" %>
    <%= form.text_field :acronym, class:"form-control", placeholder: "BTC" %>
  </div>

  <div class="mb-3">
    <%= form.label :url_imag, :class => "form-label" %>
    <%= form.text_field :url_image, class:"form-control col-md-2", placeholder:"http://img.ur/bitcoin.png" %>
  </div>

  <div class="mb-3">
    <%= form.label :mining_type, :class => "form-label" %>
    <%= form.select("mining_type_id", @mining_type_options,{include_blank: 'Selecione ...'}, class:'form-control')  %>
  </div>

  <div class="actions">
    <%= form.submit nil, {class: "btn btn-primary-2 m-2" } %>
  


<% end %>
