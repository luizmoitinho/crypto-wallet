<p id="notice"><%= notice %></p>

<h1> <%= t('form.coins') %> </h1>

<table>
  <thead>
    <tr>
      <th><%= t('form.description') =%></th>
      <th><%= t('form.acronym') =%></th>
      <th><%= t('form.image') =%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width:60, height:50 %> </td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('form.confirm_action') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_coin_path %>
